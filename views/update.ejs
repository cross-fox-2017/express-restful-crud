<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title></title>
  </head>
  <body>
    <h2>Update data</h2>
    <form action="/update" method="post">
      ID :<br>
      <input type="text" name="id" readonly="true" value="<%=todo.id%>"><br>
      Title   :<br>
      <input type="text" name="Title" value="<%=todo.title%>"><br>
      Complete:<br>
      <input type="text" name="isComplete" value="<%=todo.is_complete%>"><br>
      Email:<br>
      <select type="text" name="UserId"><br>
        <% for (var i=0;i < users.length; i++) {%>
        <option value="<%= users[i].id %>"><%= users[i].email %></option>
        <% } %>
      </select><br><br>
      <input type="submit" value="Submit">
    </form>
  </body>
</html>
