<% include includer/header %>

    <div class="container">
        <h1>Adding  - <%= data.first_name %> Task</h1>
        <form class="form-inline" action="/users/doAdd" method="post">
          <div class="form-group">
            <label for="task">Task : </label>
            <input type="text" name="task" class="form-control" placeholder="Task">
            <input type="hidden" name="user_id" class="form-control" value="<%= data.id %>">
          </div>
          <button type="submit" class="btn btn-default">Submit</button>
        </form>
      </div>

  <% include includer/footer %>
