<% include includer/header %>
<div class="container">
    <h1>Task List <a href="/users/viewDeletedTask" type="button" class="btn btn-Warning">Deleted Task</a> </h1>
    <table class="table table-hover" style="width:100%" border="1px solid">
      <tr>
        <th>id</th>
        <th>Check List</th>
        <th>Task</th>
        <th>Email</th>
        <th colspan="3">Action</th>
      </tr>
      <% results.forEach(function(item){ %>
      <tr>
        <td> <%= item.id %> </td>
        <% if(item.is_completed){ %>
        <td><span class="glyphicon glyphicon-ok" aria-hidden="true"></span></td>
        <% } else{ %>
        <td><span class="glyphicon glyphicon-remove" aria-hidden="true"></span></td>
        <% } %>
        <td> <%= item.task %> </td>
      <td> <%= item.User.email %> </td>
      <td>
        <a href="/users/Viewedit/<%= item.id %>" class="btn btn-warning">Edit</a>
        <a href="/users/delete/<%= item.id %>" onclick="return confirm('are you sure ?')" class="btn btn-danger">Delete</a>
        <a href="/users/finish/<%= item.id %>" onclick="return confirm('are you finished ?')" class="btn btn-primary">Finished</a></td>
      </tr>
        <% }) %>
    </table>
  </div>
    <br>
    <div class="container">
        <h1>Users List <a href="/users/viewNewUser" type="button" class="btn btn-primary">New User</a> </h1>

        <table class="table table-hover" style="width:100%" border="1px solid">
          <tr>
            <th>id</th>
            <th>user</th>
            <th>Email</th>
            <th colspan="2">Action</th>
          </tr>
          <% users.forEach(function(item){ %>
          <tr>
            <td> <%= item.id %> </td>
            <td> <%= item.first_name %> </td>
          <td> <%= item.email %> </td>
          <td> <a href="/users/viewAdd/<%= item.id %>" type="button" class="btn btn-primary">Add Task</button></td>
          </tr>
            <% }) %>
        </table>
      </div>



        <% include includer/footer %>
