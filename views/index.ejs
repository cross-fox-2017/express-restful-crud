<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title></title>
  </head>
  <body>
    <h1><%= title %></h1>
    <table border="1">
      <tr>
        <th>ID</th>
        <th>Title</th>
        <th>Create</th>
        <th>Completed</th>
        <td>Email</td>
        <th>Action</th>
      </tr>
      <% for(var i = 0; i < todoData.length; i++){ %>
      <tr>
        <td><%= todoData[i].id %></td>
        <td><%= todoData[i].title %></td>
        <td><%= todoData[i].createdAt.toUTCString() %></td>
        <td><%= todoData[i].is_complete %></td>
        <td><%= todoData[i].User.email %></td>
        <td>
          <a href = "/update/<%= todoData[i].id %>">Update<a/>
          <a href = "/delete/<%= todoData[i].id %>" onclick="return confirm('Are you sure?')">Delete<a/>
        </td>
      </tr>
      <% } %>
    </table>
    <form action="/add" method="post">
      <br>
      Title   :<br>
      <input type="text" name="title"><br>
      Complete:<br>
      <input type="text" name="isComplete"><br>
      Email:<br>
      <select type="text" name="UserId"><br>
        <% for (var i=0;i < users.length; i++) {%>
        <option value="<%= users[i].id %>"><%= users[i].email %></option>
        <% } %>
      </select><br><br>
      <input type="submit" value="Submit">
    </form>
  </body>
</html>
