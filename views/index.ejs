<% include static/header %>
<div class="container">
  <h1 align="center">=========<%=title%>=========</h1>
  <br>
  <table class="table table-bordered">
    <tr>
      <th>Title</th>
      <th>isComplete</th>
      <th>Email</th>
      <th>Created at</th>
      <th>Action</th>
    </tr>
    <% for(var i=0;i<tododata.length;i++){%>
    <tr>
      <td><%=tododata[i].title%></td>
      <td><%=tododata[i].is_complete%></td>
      <td><%=tododata[i].User.email %></td>
      <td><%=tododata[i].createdAt %></td>
      <td><a href="update/<%=tododata[i].id%>"> Update </a> | <a href="/delete/<%=tododata[i].id%>"> Delete </a></td>
    </tr>
    <% }%>
  </table>

  <form action="/" method="post">
  <br>
    <label>Title</label>
    <input type="text" class="form-control" name="title">
    <br>
    <label>Email</label>
    <select class="btn btn-default dropdown-toggle" name="UserId">
      <% for(var i=0;i<users.length;i++){%>
      <option value="<%=users[i].id%>"><%=users[i].email%></option>
      <% } %>
    </select>
    <input type="submit" class="btn btn-primary" value="Submit">



  </form>
<div>
<% include static/footer %>
