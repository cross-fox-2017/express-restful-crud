<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <h1><%= title %></h1>
    <p>Welcome to <%= title %></p>
    <table border="1" align="center" width="50%">
    <tr>
      <th>id</th>
      <th>title</th>
      <th>is_complete</th>
      <th>createdAt</th>
      <th>updatedAt</th>
      <th>user_email</th>
    </tr>
    <% for(var i = 0; i < tododata.length; i++) {%>
    <tr>
      <td><%= tododata[i].id %></td>
      <td><%= tododata[i].title %></td>
      <td><%= tododata[i].is_complete %></td>
      <td><%= tododata[i].createdAt %></td>
      <td><%= tododata[i].updatedAt %></td>
      <td><%= tododata[i].user_email %></td>
    </tr>
    <% } %>
  </table>
  <br><br>
  <form align="center" action="/" method="post">
    Title:<br>
    <input type="text" name="title"><br><br>
    User ID:<br>
    <input type="text" name="userid"><br><br>
    <input type="submit" value="Create">
  </form>
  </body>
</html>
